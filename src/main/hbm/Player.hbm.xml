<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="Player" table="players">
      <meta attribute="class-description">
         This class contains the Player detail. 
      </meta>
      <id name="id" type="long" column="id">
         <generator class="native"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="password" column="password" type="string"/>
      <property name="joiningDate" column="joining_day" type="date"/>
      <property name="coins" column="coins" type="int"/>
      <property name="isOnline" column="is_online" type="bit"/>
      <property name="cards" column="cards" type="string"/>
      <property name="roomId" column="room_id" type="long"/>
   </class>
</hibernate-mapping>