<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/reg_form_top_margin"
        android:layout_centerHorizontal="true"
        android:text="@string/registration_step" />

    <EditText
        android:id="@+id/passwordTE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/loginTE"
        android:layout_marginLeft="@dimen/reg_form_margins_left_right"
        android:layout_marginRight="@dimen/reg_form_margins_left_right"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTE"
        android:layout_centerHorizontal="true"
        android:text="@string/register" />

    <EditText
        android:id="@+id/loginTE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/reg_form_margins_left_right"
        android:layout_marginRight="@dimen/reg_form_margins_left_right"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/login" >

        <requestFocus />
    </EditText>

</RelativeLayout>